@model IEnumerable<BusinessObject.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<h1>All Orders</h1>

@if (Model.Count() == 0)
{
    <p>No orders available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a asp-action="Index" asp-controller="Carts" asp-route-id="@order.OrderId">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
