@model IEnumerable<BusinessObject.Models.Publisher>

@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Http
@{
    string admin = Context.Request.HttpContext.Session.GetString("IsAdmin");
}
<h1>Index</h1>

@if(admin != null)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PublisherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                    @if (admin != null)
                    {
                        <a asp-action="Edit" asp-route-id="@item.PublisherId">Edit</a>
                        <span>|</span>
                    }
                    <a asp-action="Details" asp-route-id="@item.PublisherId">Details</a>
                    @if (admin != null)
                    {
                        <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.PublisherId">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
